#! /usr/bin/env ruby
# coding: utf-8

require "optparse"

## option analysis
OPTIONS = {}
op = OptionParser.new
op.on("-e"    , "--economy", "Prior efficiency."){ OPTIONS[:economy] = true}
op.on("-s"    , "--speed"  , "Prior speed.")     { OPTIONS[:speed] = true}

op.on("-g"    , "--TODO"  , "Geometry optimization.")     { OPTIONS[:TODO] = true}
op.on("-n"    , "--TODO"  , "Nudged Elastic Band method."){ OPTIONS[:TODOrue}
op.on("-c"    , "--TODO"  , "Condition Finding.")         { OPTIONS[:TODOrue}

op.parse!(ARGV)

cluster = ARGV[0]
